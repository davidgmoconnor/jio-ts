{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./build",
    "module": "commonjs",
    "target": "es2020",
    "lib": ["es2020", "dom"],
    "noImplicitAny": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "allowJs": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "node_modules/hubspot"]
}
